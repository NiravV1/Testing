repeat
    wait()
until game:IsLoaded()

local library = {
    flags = {},
    accent = Color3.fromRGB(140, 60, 255),
    outline = { Color3.fromRGB(140, 60, 255), Color3.fromRGB(223, 57, 137) },
    toggled = true,
}

local services = setmetatable({}, {
    __index = function(_, service)
        return game:GetService(service)
    end
})

local utility = {}

function utility.create(class, properties)
    local obj = Instance.new(class)
    for prop, v in next, properties do
        obj[prop] = v
    end
    return obj
end

function utility.gradient(colors)
    local colortbl = {}
    for i, color in next, colors do
        table.insert(colortbl, ColorSequenceKeypoint.new((i - 1) / (#colors - 1), color))
    end
    return ColorSequence.new(colortbl)
end

function utility.tween(obj, info, props)
    local tween = services.TweenService:Create(obj, TweenInfo.new(unpack(info)), props)
    tween:Play()
    return tween
end

function utility.dragify(object, inputFrame)
    local dragging, dragInput, dragStart, startPos
    local targetInput = inputFrame or object

    targetInput.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = object.Position
            
            local connection
            connection = input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                    connection:Disconnect()
                end
            end)
        end
    end)
    targetInput.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
            dragInput = input
        end
    end)
    services.UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            local delta = input.Position - dragStart
            object.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
end

-- HELPER: Entrance Animation (Fade & Slide In)
function utility.animateIn(obj, finalSize)
    if not finalSize then finalSize = obj.Size end
    obj.Size = UDim2.new(0, 0, finalSize.Y.Scale, finalSize.Y.Offset) -- Start flat
    obj.BackgroundTransparency = 1
    obj.Size = UDim2.new(0, 0, finalSize.Y.Scale, finalSize.Y.Offset)
    
    task.wait(0.02) -- Tiny buffer
    
    -- Tween width to 1 and opacity to 0
    utility.tween(obj, {0.3, Enum.EasingStyle.Quart, Enum.EasingDirection.Out}, {
        Size = finalSize,
        BackgroundTransparency = 0
    })
end

local notifyHolder = game:GetService("CoreGui"):FindFirstChild("ZalHub_NotifyHolder")
if not notifyHolder then
    notifyHolder = utility.create("ScreenGui", {
        Name = "ZalHub_NotifyHolder",
        Parent = game:GetService("CoreGui"),
        ResetOnSpawn = false,
        IgnoreGuiInset = true
    })
    local layout = utility.create("UIListLayout", {
        Parent = notifyHolder,
        Padding = UDim.new(0, 8),
        SortOrder = Enum.SortOrder.LayoutOrder,
        VerticalAlignment = Enum.VerticalAlignment.Bottom,
        HorizontalAlignment = Enum.HorizontalAlignment.Right
    })
    
    local padding = utility.create("UIPadding", {
        Parent = notifyHolder,
        PaddingBottom = UDim.new(0, 80),
        PaddingRight = UDim.new(0, 10)
    })
end

function library:Notify(options)
    if not notifyHolder then return end

    local notifyFrame = utility.create("Frame", {
        Size = UDim2.new(0, 240, 0, 0),
        Position = UDim2.new(1, 270, 1, 0),
        BackgroundColor3 = Color3.fromRGB(15, 15, 15),
        BorderSizePixel = 0,
        Parent = notifyHolder,
        AnchorPoint = Vector2.new(1,1)
    })
    notifyFrame.AutomaticSize = Enum.AutomaticSize.Y

    local border = utility.create("Frame", {
        Size = UDim2.new(1, 4, 1, 4),
        Position = UDim2.new(0, -2, 0, -2),
        BackgroundColor3 = Color3.fromRGB(255,255,255),
        BorderSizePixel = 0,
        ZIndex = 0,
        Parent = notifyFrame
    })
    local borderGradient = utility.create("UIGradient", {
        Rotation = 45,
        Color = utility.gradient(library.outline),
        Parent = border
    })

    local contentFrame = utility.create("Frame", {
        Size = UDim2.new(1, 0, 1, 0),
        BackgroundColor3 = Color3.fromRGB(15, 15, 15),
        BorderSizePixel = 0,
        Parent = notifyFrame
    })
    contentFrame.AutomaticSize = Enum.AutomaticSize.Y

    local list = utility.create("UIListLayout", {
        Parent = contentFrame,
        Padding = UDim.new(0, 4)
    })

    utility.create("TextLabel", {
        Size = UDim2.new(1, -8, 0, 18),
        Position = UDim2.new(0, 4, 0, 4),
        BackgroundTransparency = 1,
        Text = options.Title or "Notification",
        TextColor3 = library.accent,
        TextSize = 13,
        Font = Enum.Font.Code,
        TextXAlignment = Enum.TextXAlignment.Left,
        ZIndex = 2,
        Parent = contentFrame
    })

    utility.create("TextLabel", {
        Size = UDim2.new(1, -8, 0, 0),
        Position = UDim2.new(0, 4, 0, 0),
        BackgroundTransparency = 1,
        Text = options.Content or "Message",
        TextColor3 = Color3.fromRGB(200, 200, 200),
        TextSize = 11,
        Font = Enum.Font.Code,
        TextWrapped = true,
        TextXAlignment = Enum.TextXAlignment.Left,
        AutomaticSize = Enum.AutomaticSize.Y, 
        ZIndex = 2,
        Parent = contentFrame
    })

    local duration = options.Duration or 5

    utility.tween(notifyFrame, {0.4, Enum.EasingStyle.Back}, {Position = UDim2.new(1, -10, 1, -10)})

    task.spawn(function()
        task.wait(duration)
        utility.tween(notifyFrame, {0.4, Enum.EasingStyle.Quad}, {Position = UDim2.new(1, 270, 1, 0)})
        task.wait(0.5)
        notifyFrame:Destroy()
    end)
end

function library:Window(name)
    local gui = utility.create("ScreenGui", {
        Name = "ZalHub",
        Parent = game:GetService("CoreGui") or game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui"),
        ResetOnSpawn = false
    })

    local holder = utility.create("Frame", {
        Name = "Holder",
        Size = UDim2.new(0, 550, 0, 420),
        Position = UDim2.new(0.5, -275, 0.5, -210),
        BackgroundColor3 = Color3.fromRGB(10, 10, 10),
        BorderSizePixel = 0,
        Parent = gui
    })

    -- ==========================================
    -- TOGGLE GUI / WATERMARK
    -- ==========================================
    local toggleGui = Instance.new("ScreenGui")
    toggleGui.Name = "ZalHub_Toggle"
    toggleGui.Parent = game:GetService("CoreGui")
    toggleGui.ResetOnSpawn = false
    toggleGui.DisplayOrder = 999 -- Ensure it stays on top

    local toggleBtn = Instance.new("TextButton")
    toggleBtn.Name = "ToggleBtn"
    toggleBtn.Size = UDim2.new(0, 110, 0, 30)
    toggleBtn.Position = UDim2.new(0, 20, 0, 10) -- Top Left
    toggleBtn.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
    toggleBtn.BorderSizePixel = 0
    toggleBtn.Text = "ZalHub [ON]"
    toggleBtn.TextColor3 = library.accent
    toggleBtn.Font = Enum.Font.Code
    toggleBtn.TextSize = 14
    toggleBtn.ZIndex = 100
    toggleBtn.Parent = toggleGui

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 5)
    corner.Parent = toggleBtn

    local stroke = Instance.new("UIStroke")
    stroke.Color = library.accent
    stroke.Thickness = 1
    stroke.Parent = toggleBtn

    local isOpen = true

    local function toggleWindow()
        isOpen = not isOpen
        holder.Visible = isOpen
        
        if isOpen then
            toggleBtn.Text = "ZalHub [ON]"
            toggleBtn.TextColor3 = library.accent
            stroke.Color = library.accent
        else
            toggleBtn.Text = "ZalHub [OFF]"
            toggleBtn.TextColor3 = Color3.fromRGB(80, 80, 80)
            stroke.Color = Color3.fromRGB(80, 80, 80)
        end
    end

    -- Click to toggle
    toggleBtn.MouseButton1Click:Connect(toggleWindow)

    -- Keybind to toggle (Right Shift)
    services.UserInputService.InputBegan:Connect(function(input, gameProcessed)
        if gameProcessed then return end
        if input.KeyCode == Enum.KeyCode.RightShift then
            toggleWindow()
        end
    end)

    -- Make watermark draggable
    utility.dragify(toggleBtn, toggleBtn)
    -- ==========================================

    local border = utility.create("Frame", {
        Size = UDim2.new(1, 4, 1, 4),
        Position = UDim2.new(0, -2, 0, -2),
        BackgroundColor3 = Color3.fromRGB(255,255,255),
        BorderSizePixel = 0,
        ZIndex = 0,
        Parent = holder
    })
    local borderGradient = utility.create("UIGradient", {
        Rotation = 0,
        Color = utility.gradient(library.outline),
        Parent = border
    })

    task.spawn(function()
        while true do
            utility.tween(borderGradient, {4, Enum.EasingStyle.Linear}, {Rotation = 360})
            wait(4)
            borderGradient.Rotation = 0
        end
    end)

    local mainBG = utility.create("Frame", {
        Size = UDim2.new(1, 0, 1, 0),
        BackgroundColor3 = Color3.fromRGB(15, 15, 15),
        BorderSizePixel = 0,
        ZIndex = 1,
        Parent = holder
    })

    local topBar = utility.create("Frame", {
        Size = UDim2.new(1, 0, 0, 35),
        BackgroundColor3 = Color3.fromRGB(20, 20, 20),
        BorderSizePixel = 0,
        ZIndex = 2,
        Parent = mainBG
    })

    utility.create("TextLabel", {
        Size = UDim2.new(0, 120, 1, 0),
        Position = UDim2.new(0, 12, 0, 0),
        BackgroundTransparency = 1,
        Text = name,
        TextColor3 = library.accent,
        TextSize = 16,
        Font = Enum.Font.Code,
        TextStrokeTransparency = 0.5,
        TextXAlignment = Enum.TextXAlignment.Left,
        ZIndex = 3,
        Parent = topBar
    })

    local tabContainer = utility.create("Frame", {
        Size = UDim2.new(1, -140, 1, 0),
        Position = UDim2.new(0, 130, 0, 0),
        BackgroundTransparency = 1,
        ZIndex = 3,
        Parent = topBar
    })
    utility.create("UIListLayout", {
        FillDirection = Enum.FillDirection.Horizontal,
        SortOrder = Enum.SortOrder.LayoutOrder,
        Padding = UDim.new(0, 15),
        VerticalAlignment = Enum.VerticalAlignment.Center,
        Parent = tabContainer
    })

    local content = utility.create("Frame", {
        Size = UDim2.new(1, -20, 1, -55),
        Position = UDim2.new(0, 10, 0, 45),
        BackgroundTransparency = 1,
        ZIndex = 2,
        Parent = mainBG
    })

    -- UPDATED: Pass topBar as second argument so ONLY top bar drags window
    utility.dragify(holder, topBar)

    local currentTab = nil
    local windowActions = {}

    function windowActions:Tab(tabName)
        local tabBtn = utility.create("TextButton", {
            Size = UDim2.new(0, 60, 0, 25),
            BackgroundTransparency = 1,
            Text = tabName,
            TextColor3 = Color3.fromRGB(120, 120, 120),
            TextSize = 13,
            Font = Enum.Font.Code,
            ZIndex = 4,
            Parent = tabContainer
        })

        local underline = utility.create("Frame", {
            Size = UDim2.new(1, 0, 0, 2),
            Position = UDim2.new(0, 0, 1, 2),
            BackgroundColor3 = library.accent,
            BorderSizePixel = 0,
            BackgroundTransparency = 1,
            ZIndex = 4,
            Parent = tabBtn
        })

        -- CHANGED: tabFrame is now a normal Frame (Container), not a ScrollingFrame
        local tabFrame = utility.create("Frame", {
            Size = UDim2.new(1, 0, 1, 0),
            BackgroundTransparency = 1,
            BorderSizePixel = 0,
            Visible = false,
            ZIndex = 2,
            Parent = content
        })

        -- CREATE TWO SCROLLING COLUMNS
        local leftCol = utility.create("ScrollingFrame", {
            Size = UDim2.new(0.5, -10, 1, 0),
            Position = UDim2.new(0, 0, 0, 0),
            BackgroundTransparency = 1,
            ScrollBarThickness = 5, -- Independent Scrollbar
            ScrollBarImageColor3 = Color3.fromRGB(50, 50, 50),
            Visible = true, -- FIXED: Was false, now true
            ZIndex = 3,
            Parent = tabFrame
        })

        local rightCol = utility.create("ScrollingFrame", {
            Size = UDim2.new(0.5, -10, 1, 0),
            Position = UDim2.new(0.5, 10, 0, 0),
            BackgroundTransparency = 1,
            ScrollBarThickness = 5, -- Independent Scrollbar
            ScrollBarImageColor3 = Color3.fromRGB(50, 50, 50),
            Visible = true, -- FIXED: Was false, now true
            ZIndex = 3,
            Parent = tabFrame
        })

        local leftList = utility.create("UIListLayout", {
            SortOrder = Enum.SortOrder.LayoutOrder,
            Padding = UDim.new(0, 10),
            Parent = leftCol
        })

        local rightList = utility.create("UIListLayout", {
            SortOrder = Enum.SortOrder.LayoutOrder,
            Padding = UDim.new(0, 10),
            Parent = rightCol
        })

        -- FIX: Proper Scrolling Logic using GetPropertyChangedSignal
        -- This avoids lag and ensures content is visible
        local function updateCanvas()
            leftCol.CanvasSize = UDim2.new(0, 0, 0, leftList.AbsoluteContentSize.Y)
            rightCol.CanvasSize = UDim2.new(0, 0, 0, rightList.AbsoluteContentSize.Y)
        end

        -- Connect to the ScrollingFrames AbsoluteContentSize. This is the most reliable way.
        leftCol:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(updateCanvas)
        rightCol:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(updateCanvas)

        local function select()
            if currentTab then
                currentTab.Frame.Visible = false
                utility.tween(currentTab.Btn, {0.2}, {TextColor3 = Color3.fromRGB(120, 120, 120)})
                utility.tween(currentTab.Line, {0.2}, {BackgroundTransparency = 1})
            end
            tabFrame.Visible = true
            utility.tween(tabBtn, {0.2}, {TextColor3 = library.accent})
            utility.tween(underline, {0.2}, {BackgroundTransparency = 0})
            currentTab = {Frame = tabFrame, Btn = tabBtn, Line = underline}
            
            -- Force update when tab is selected to prevent invisible bug
            task.wait(0.05) -- Tiny wait for layout engine to detect visibility
            updateCanvas()
        end

        tabBtn.MouseButton1Click:Connect(select)
        if not currentTab then select() end

        local tabActions = {}
        local currentSectionIndex = 0

        function tabActions:Section(sectionName)
            -- LOGIC: Alternate sections between Left and Right columns
            local targetCol = currentSectionIndex % 2 == 0 and leftCol or rightCol
            currentSectionIndex = currentSectionIndex + 1

            local sectionFrame = utility.create("Frame", {
                BackgroundColor3 = Color3.fromRGB(18, 18, 18),
                BorderSizePixel = 1,
                BorderColor3 = Color3.fromRGB(30, 30, 30),
                AutomaticSize = Enum.AutomaticSize.Y, -- Auto Height
                Size = UDim2.new(1, 0, 0, 0),      -- Starts at 0
                ZIndex = 4,
                Parent = targetCol
            })
            
            -- Animate Section Entry
            utility.animateIn(sectionFrame, UDim2.new(1, 0, 0, 0))

            utility.create("TextLabel", {
                Size = UDim2.new(1, -10, 0, 25),
                Position = UDim2.new(0, 8, 0, 0),
                BackgroundTransparency = 1,
                Text = sectionName:upper(),
                TextColor3 = library.accent,
                TextSize = 13,
                Font = Enum.Font.Code,
                TextXAlignment = Enum.TextXAlignment.Left,
                ZIndex = 5,
                Parent = sectionFrame
            })

            local items = utility.create("Frame", {
                Size = UDim2.new(1, -16, 0, 0),
                Position = UDim2.new(0, 8, 0, 25),
                BackgroundTransparency = 1,
                AutomaticSize = Enum.AutomaticSize.Y, -- Auto Height
                ZIndex = 5,
                Parent = sectionFrame
            })
            local itemLayout = utility.create("UIListLayout", {
                Padding = UDim.new(0, 6),
                SortOrder = Enum.SortOrder.LayoutOrder,
                Parent = items
            })

            local sectionActions = {}

            function sectionActions:Toggle(text, flag, callback)
                local toggle = utility.create("TextButton", {
                    Size = UDim2.new(1, 0, 0, 20),
                    BackgroundTransparency = 1,
                    Text = "",
                    ZIndex = 6,
                    Parent = items
                })
                
                -- Animate Toggle Entry
                utility.animateIn(toggle)

                local box = utility.create("Frame", {
                    Size = UDim2.new(0, 14, 0, 14),
                    Position = UDim2.new(0, 0, 0.5, -7),
                    BackgroundColor3 = Color3.fromRGB(25, 25, 25),
                    BorderColor3 = Color3.fromRGB(40, 40, 40),
                    ZIndex = 7,
                    Parent = toggle
                })
                -- ROUNDED CORNER
                local boxCorner = Instance.new("UICorner")
                boxCorner.CornerRadius = UDim.new(0, 4)
                boxCorner.Parent = box

                local fill = utility.create("Frame", {
                    Size = UDim2.new(1, -4, 1, -4),
                    Position = UDim2.new(0, 2, 0, 2),
                    BackgroundColor3 = library.accent,
                    BorderSizePixel = 0,
                    BackgroundTransparency = 1,
                    ZIndex = 8,
                    Parent = box
                })
                local fillCorner = Instance.new("UICorner")
                fillCorner.CornerRadius = UDim.new(0, 2)
                fillCorner.Parent = fill
                
                utility.create("TextLabel", {
                    Size = UDim2.new(1, -20, 1, 0),
                    Position = UDim2.new(0, 20, 0, 0),
                    BackgroundTransparency = 1,
                    Text = text,
                    TextColor3 = Color3.fromRGB(180, 180, 180),
                    TextSize = 12,
                    Font = Enum.Font.Code,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ZIndex = 6,
                    Parent = toggle
                })

                local enabled = false
                toggle.MouseButton1Click:Connect(function()
                    enabled = not enabled
                    library.flags[flag] = enabled
                    callback(enabled)

                    -- SMOOTH TOGGLE ANIMATION
                    if enabled then
                        utility.tween(fill, {0.2, Enum.EasingStyle.Back}, {
                            BackgroundTransparency = 0,
                            Size = UDim2.new(1, -4, 1, -4)
                        })
                    else
                        utility.tween(fill, {0.2, Enum.EasingStyle.Back}, {
                            BackgroundTransparency = 1,
                            Size = UDim2.new(0, 0, 1, -4) -- Shrink horizontally then hide
                        })
                    end
                end)
            end

            function sectionActions:Textbox(text, flag, placeholder, callback)
                local textboxFrame = utility.create("Frame", {
                    Size = UDim2.new(1, 0, 0, 35),
                    BackgroundTransparency = 1,
                    ZIndex = 6,
                    Parent = items
                })
                -- Animate Textbox Entry
                utility.animateIn(textboxFrame)

                utility.create("TextLabel", {
                    Size = UDim2.new(1, 0, 0, 15),
                    BackgroundTransparency = 1,
                    Text = text,
                    TextColor3 = Color3.fromRGB(180, 180, 180),
                    TextSize = 12,
                    Font = Enum.Font.Code,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ZIndex = 7,
                    Parent = textboxFrame
                })
                local box = utility.create("TextBox", {
                    Size = UDim2.new(1, 0, 0, 18),
                    Position = UDim2.new(0, 0, 0, 16),
                    BackgroundColor3 = Color3.fromRGB(25, 25, 25),
                    BorderColor3 = Color3.fromRGB(40, 40, 40),
                    PlaceholderText = placeholder or "...",
                    Text = "",
                    TextColor3 = Color3.fromRGB(220, 220, 220),
                    PlaceholderColor3 = Color3.fromRGB(80, 80, 80),
                    TextSize = 12,
                    Font = Enum.Font.Code,
                    ZIndex = 7,
                    Parent = textboxFrame
                })
                box.FocusLost:Connect(function()
                    library.flags[flag] = box.Text
                    callback(box.Text)
                end)
            end

            function sectionActions:Dropdown(text, flag, list, callback)
                local dropdown = utility.create("Frame", {
                    Size = UDim2.new(1, 0, 0, 35),
                    BackgroundTransparency = 1,
                    ZIndex = 6,
                    Parent = items
                })
                -- Animate Dropdown Entry
                utility.animateIn(dropdown)

                utility.create("TextLabel", {
                    Size = UDim2.new(1, 0, 0, 15),
                    BackgroundTransparency = 1,
                    Text = text,
                    TextColor3 = Color3.fromRGB(180, 180, 180),
                    TextSize = 12,
                    Font = Enum.Font.Code,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ZIndex = 7,
                    Parent = dropdown
                })
                local btn = utility.create("TextButton", {
                    Size = UDim2.new(1, 0, 0, 18),
                    Position = UDim2.new(0, 0, 0, 16),
                    BackgroundColor3 = Color3.fromRGB(25, 25, 25),
                    BorderColor3 = Color3.fromRGB(40, 40, 40),
                    Text = "Select...",
                    TextColor3 = Color3.fromRGB(200, 200, 200),
                    TextSize = 12,
                    Font = Enum.Font.Code,
                    ZIndex = 7,
                    Parent = dropdown
                })

                -- UPGRADED: SCROLLING DROPDOWN LIST
                local listFrame = utility.create("ScrollingFrame", {
                    Size = UDim2.new(1, 0, 0, 150), -- Fixed height as requested
                    Position = UDim2.new(0, 0, 1, 0),
                    BackgroundColor3 = Color3.fromRGB(20, 20, 20),
                    BorderColor3 = Color3.fromRGB(40, 40, 40),
                    Visible = false,
                    ZIndex = 11,
                    ScrollBarThickness = 3,
                    ScrollBarImageColor3 = Color3.fromRGB(50, 50, 50),
                    Parent = btn
                })
                
                -- SEARCH BOX
                local searchBox = utility.create("TextBox", {
                    Size = UDim2.new(1, -4, 0, 20),
                    Position = UDim2.new(0, 2, 0, 2),
                    BackgroundColor3 = Color3.fromRGB(30, 30, 30),
                    BorderColor3 = Color3.fromRGB(50, 50, 50),
                    Text = "",
                    PlaceholderText = "Search...",
                    TextColor3 = Color3.fromRGB(200, 200, 200),
                    PlaceholderColor3 = Color3.fromRGB(100, 100, 100),
                    TextSize = 11,
                    Font = Enum.Font.Code,
                    ZIndex = 12,
                    Parent = listFrame
                })
                -- Corner for search box
                local sCorner = Instance.new("UICorner")
                sCorner.CornerRadius = UDim.new(0, 4)
                sCorner.Parent = searchBox

                local listLayout = utility.create("UIListLayout", {
                    Padding = UDim.new(0, 2),
                    SortOrder = Enum.SortOrder.LayoutOrder,
                    Parent = listFrame
                })

                -- UPDATE CANVAS SIZE DYNAMICALLY BASED ON VISIBLE ITEMS
                local function updateListCanvas()
                    -- Calculate height based on visible buttons + search box height + padding
                    local visibleCount = 0
                    for _, item in pairs(listLayout:GetChildren()) do
                        if item:IsA("TextButton") and item.Visible then
                            visibleCount = visibleCount + 1
                        end
                    end
                    local contentHeight = (visibleCount * 18) + 22 -- 22 for search box + padding
                    listFrame.CanvasSize = UDim2.new(0, 0, 0, contentHeight)
                end

                local opened = false
                btn.MouseButton1Click:Connect(function()
                    opened = not opened
                    listFrame.Visible = opened
                    if opened then
                        updateListCanvas()
                    end
                end)

                -- SEARCH LOGIC
                searchBox:GetPropertyChangedSignal("Text"):Connect(function()
                    local search = string.lower(searchBox.Text)
                    for _, v in pairs(listLayout:GetChildren()) do
                        if v:IsA("TextButton") then
                            if string.find(string.lower(v.Text), search) then
                                v.Visible = true
                            else
                                v.Visible = false
                            end
                        end
                    end
                    updateListCanvas()
                end)

                for _, v in next, list do
                    local item = utility.create("TextButton", {
                        Size = UDim2.new(1, 0, 0, 18),
                        BackgroundColor3 = Color3.fromRGB(20, 20, 20),
                        BorderSizePixel = 0,
                        Text = v,
                        TextColor3 = Color3.fromRGB(160, 160, 160),
                        TextSize = 12,
                        Font = Enum.Font.Code,
                        ZIndex = 12,
                        Parent = listLayout -- Parent to layout, layout handles order
                    })
                    item.MouseButton1Click:Connect(function()
                        btn.Text = v
                        opened = false
                        listFrame.Visible = false
                        library.flags[flag] = v
                        callback(v)
                        -- Reset Search
                        searchBox.Text = ""
                        for _, btnReset in pairs(listLayout:GetChildren()) do
                            if btnReset:IsA("TextButton") then btnReset.Visible = true end
                        end
                    end)
                end
                
                -- Initial Canvas Update
                updateListCanvas()
            end

            function sectionActions:Slider(text, flag, min, max, default, callback)
                local slider = utility.create("Frame", {
                    Size = UDim2.new(1, 0, 0, 38),
                    BackgroundTransparency = 1,
                    ZIndex = 6,
                    Parent = items
                })
                -- Animate Slider Entry
                utility.animateIn(slider)

                utility.create("TextLabel", {
                    Size = UDim2.new(1, 0, 0, 15),
                    BackgroundTransparency = 1,
                    Text = text,
                    TextColor3 = Color3.fromRGB(180, 180, 180),
                    TextSize = 12,
                    Font = Enum.Font.Code,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ZIndex = 7,
                    Parent = slider
                })
                local bg = utility.create("TextButton", {
                    Size = UDim2.new(1, 0, 0, 14),
                    Position = UDim2.new(0, 0, 0, 18),
                    BackgroundColor3 = Color3.fromRGB(25, 25, 25),
                    BorderColor3 = Color3.fromRGB(40, 40, 40),
                    Text = "",
                    ZIndex = 7,
                    Parent = slider
                })
                local fill = utility.create("Frame", {
                    Size = UDim2.new((default - min) / (max - min), 0, 1, 0),
                    BackgroundColor3 = library.accent,
                    BorderSizePixel = 0,
                    ZIndex = 8,
                    Parent = bg
                })
                local val = utility.create("TextLabel", {
                    Size = UDim2.new(1, 0, 1, 0),
                    BackgroundTransparency = 1,
                    Text = string.format("%.2f", default),
                    TextColor3 = Color3.fromRGB(255,255,255),
                    TextSize = 11,
                    Font = Enum.Font.Code,
                    ZIndex = 9,
                    Parent = bg
                })

                local function update(input)
                    local perc = math.clamp((input.Position.X - bg.AbsolutePosition.X) / bg.AbsoluteSize.X,0,1)
                    local rawValue = min + (max - min) * perc
                    local value = tonumber(string.format("%.2f", rawValue))
                    utility.tween(fill, {0.1}, {Size = UDim2.new(perc, 0, 1, 0)})
                    val.Text = string.format("%.2f", value)
                    library.flags[flag] = value
                    callback(value)
                end

                local dragging = false
                bg.InputBegan:Connect(function(input)
                    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                        dragging = true
                        update(input)
                    end
                end)
                services.UserInputService.InputChanged:Connect(function(input)
                    if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
                        update(input)
                    end
                end)
                services.UserInputService.InputEnded:Connect(function(input)
                    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then dragging = false end
                end)
            end

            function sectionActions:Button(text, callback)
                local btn = utility.create("TextButton", {
                    Size = UDim2.new(1, 0, 0, 24),
                    BackgroundColor3 = Color3.fromRGB(25, 25, 25),
                    BorderColor3 = Color3.fromRGB(40, 40, 40),
                    Text = text,
                    TextColor3 = Color3.fromRGB(200, 200, 200),
                    TextSize = 12,
                    Font = Enum.Font.Code,
                    ZIndex = 5,
                    Parent = items
                })
                -- Animate Button Entry
                utility.animateIn(btn)
                btn.MouseButton1Click:Connect(callback)
            end

            return sectionActions
        end

        return tabActions
    end

    return windowActions
end

return library
